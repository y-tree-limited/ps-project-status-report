<!-- Script to handle color toggling and saving -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        
        // --- SAVE / LOAD LOGIC ---
        
        function saveDashboard() {
            const data = {
                title: document.getElementById('report-title').innerHTML,
                date: document.getElementById('report-date').innerHTML,
                statusClass: document.getElementById('overall-status').className,
                statusText: document.getElementById('overall-status').innerHTML,
                execSummary: document.getElementById('exec-summary').innerHTML,
                
                // Timeline
                timeline: [],
                
                // Tables
                saasTable: document.getElementById('saas-table').innerHTML,
                awsTable: document.getElementById('aws-table').innerHTML,
                vendorTable: document.getElementById('vendor-table').innerHTML,
                
                // Side Column
                rootCauseClass: document.getElementById('root-cause-card').className,
                rootCauseText: document.getElementById('root-cause-text').innerHTML,
                riskList: document.getElementById('risk-list').innerHTML,
                actionList: document.getElementById('action-list').innerHTML
            };

            // Capture timeline state
            document.querySelectorAll('.timeline-row').forEach((row, index) => {
                const bar = row.querySelector('.timeline-bar');
                const slider = row.querySelector('.bar-slider');
                const status = row.querySelector('.timeline-status');
                
                data.timeline.push({
                    barWidth: bar.style.width,
                    barClass: bar.className, // saves color
                    sliderValue: slider.value,
                    statusText: status.innerHTML,
                    statusClass: status.className
                });
            });

            localStorage.setItem('crowdstrike_dashboard_save', JSON.stringify(data));
            alert('Dashboard state saved to this browser!');
        }

        function loadDashboard() {
            const saved = localStorage.getItem('crowdstrike_dashboard_save');
            if (!saved) return;
            
            const data = JSON.parse(saved);
            
            // Restore Header
            document.getElementById('report-title').innerHTML = data.title;
            document.getElementById('report-date').innerHTML = data.date;
            document.getElementById('overall-status').className = data.statusClass;
            document.getElementById('overall-status').innerHTML = data.statusText;
            
            // Restore Summary
            document.getElementById('exec-summary').innerHTML = data.execSummary;
            
            // Restore Tables
            document.getElementById('saas-table').innerHTML = data.saasTable;
            document.getElementById('aws-table').innerHTML = data.awsTable;
            document.getElementById('vendor-table').innerHTML = data.vendorTable;
            
            // Restore Side Column
            document.getElementById('root-cause-card').className = data.rootCauseClass;
            document.getElementById('root-cause-text').innerHTML = data.rootCauseText;
            document.getElementById('risk-list').innerHTML = data.riskList;
            document.getElementById('action-list').innerHTML = data.actionList;
            
            // Restore Timeline
            if(data.timeline && data.timeline.length > 0) {
                const rows = document.querySelectorAll('.timeline-row');
                rows.forEach((row, index) => {
                    if (data.timeline[index]) {
                        const t = data.timeline[index];
                        const bar = row.querySelector('.timeline-bar');
                        const slider = row.querySelector('.bar-slider');
                        const status = row.querySelector('.timeline-status');
                        
                        bar.style.width = t.barWidth;
                        bar.className = t.barClass; // Restore color class
                        slider.value = t.sliderValue;
                        status.innerHTML = t.statusText;
                        status.className = t.statusClass;
                    }
                });
            }
            
            // Re-attach event listeners to restored elements
            reattachListeners();
        }
        
        function resetDashboard() {
            if(confirm("Are you sure? This will clear your saved changes and revert to the template.")) {
                localStorage.removeItem('crowdstrike_dashboard_save');
                location.reload();
            }
        }
        
        // Expose to global scope for buttons
        window.saveDashboard = saveDashboard;
        window.resetDashboard = resetDashboard;

        // Try load on startup
        loadDashboard();


        // --- INTERACTIVITY LOGIC ---

        function reattachListeners() {
             // 1. Impact Boxes (Three Way Toggle)
            const impactClasses = ['impact-box', 'impact-box-neutral', 'impact-box-success'];
            document.querySelectorAll('.impact-box, .impact-box-neutral, .impact-box-success').forEach(box => {
                if (box.getAttribute('data-clickable') === 'true') return;
                box.setAttribute('data-clickable', 'true');
                box.addEventListener('click', function(e) {
                    e.preventDefault(); e.stopPropagation();
                    let currentClassIndex = impactClasses.findIndex(cls => this.classList.contains(cls));
                    if (currentClassIndex > -1) this.classList.remove(impactClasses[currentClassIndex]);
                    let nextClassIndex = (currentClassIndex + 1) % impactClasses.length;
                    this.classList.add(impactClasses[nextClassIndex]);
                });
            });

            // 2. Status Pills & Tasks (Cycle Colors)
            const statusClasses = ['ts-todo', 'ts-progress', 'ts-ready', 'ts-done', 'ts-blocked'];
            document.querySelectorAll('.task-status').forEach(pill => {
                if (pill.getAttribute('data-clickable') === 'true') return;
                pill.setAttribute('data-clickable', 'true');
                pill.title = "Click to toggle status";
                pill.addEventListener('click', function(e) {
                    let currentClassIndex = statusClasses.findIndex(cls => this.classList.contains(cls));
                    if (currentClassIndex > -1) this.classList.remove(statusClasses[currentClassIndex]);
                    else currentClassIndex = -1;
                    let nextClassIndex = (currentClassIndex + 1) % statusClasses.length;
                    this.classList.add(statusClasses[nextClassIndex]);
                });
            });
            
             // 3. Header Status Pill (Cycle Colors)
            const headerStatusClasses = ['status-red', 'status-amber', 'status-green'];
            const headerPill = document.querySelector('.header .status-pill');
            if (headerPill) {
                headerPill.addEventListener('click', function(e) {
                    let currentClassIndex = headerStatusClasses.findIndex(cls => this.classList.contains(cls));
                    if (currentClassIndex > -1) this.classList.remove(headerStatusClasses[currentClassIndex]);
                    else currentClassIndex = -1;
                    let nextClassIndex = (currentClassIndex + 1) % headerStatusClasses.length;
                    this.classList.add(headerStatusClasses[nextClassIndex]);
                });
            }

            // 4. Age Cells (Cycle Colors)
            const ageClasses = ['age-danger', 'age-warning', 'age-success'];
            document.querySelectorAll('.age-danger, .age-warning, .age-success').forEach(cell => {
                if (cell.getAttribute('data-clickable') === 'true') return;
                cell.setAttribute('data-clickable', 'true');
                cell.title = "Click to toggle severity";
                cell.addEventListener('click', function(e) {
                    let currentClassIndex = ageClasses.findIndex(cls => this.classList.contains(cls));
                    if (currentClassIndex > -1) this.classList.remove(ageClasses[currentClassIndex]);
                    let nextClassIndex = (currentClassIndex + 1) % ageClasses.length;
                    this.classList.add(ageClasses[nextClassIndex]);
                });
            });

            // 5. Timeline Colors (Click Status Text to Toggle Bar Color AND Text Color)
            const barClasses = ['bg-green', 'bg-amber', 'bg-red', 'bg-blue', 'bg-gray'];
            const textClasses = ['text-green', 'text-amber', 'text-red', 'text-blue', 'text-gray'];

            document.querySelectorAll('.timeline-status').forEach(statusText => {
                // Make clickable
                statusText.style.cursor = 'pointer';
                
                // Avoid double binding
                if(statusText.getAttribute('data-bound') === 'true') return;
                statusText.setAttribute('data-bound', 'true');
                
                statusText.addEventListener('click', function(e) {
                    const row = this.parentElement;
                    const bar = row.querySelector('.timeline-bar');

                    let currentClassIndex = textClasses.findIndex(cls => this.classList.contains(cls));
                    
                    if (currentClassIndex > -1) {
                        this.classList.remove(textClasses[currentClassIndex]);
                        if(bar) bar.classList.remove(barClasses[currentClassIndex]);
                    } else {
                        currentClassIndex = -1;
                    }

                    let nextClassIndex = (currentClassIndex + 1) % textClasses.length;
                    
                    this.classList.add(textClasses[nextClassIndex]);
                    if(bar) bar.classList.add(barClasses[nextClassIndex]);
                });
            });

            // 6. Root Cause Card (Click Header to Toggle Theme)
            const cardClasses = ['card-status-red', 'card-status-amber', 'card-status-green', 'card-status-blue'];
            const rootCauseCard = document.getElementById('root-cause-card');
            if(rootCauseCard) {
                const header = rootCauseCard.querySelector('h2');
                if(header && header.getAttribute('data-bound') !== 'true') {
                    header.setAttribute('data-bound', 'true');
                    header.addEventListener('click', function(e) {
                        let currentClassIndex = cardClasses.findIndex(cls => rootCauseCard.classList.contains(cls));
                        if (currentClassIndex > -1) rootCauseCard.classList.remove(cardClasses[currentClassIndex]);
                        else currentClassIndex = -1;
                        let nextClassIndex = (currentClassIndex + 1) % cardClasses.length;
                        rootCauseCard.classList.add(cardClasses[nextClassIndex]);
                    });
                }
            }
        }
        
        // Run listeners once on load
        reattachListeners();

        // Periodic re-scan for new content added via copy/paste (optional, but good for editable tables)
        setInterval(reattachListeners, 2000);
    });
</script>

</body>
</html>
